{
  "name": "moliggy-tech-monorepo",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter @moliggy-tech/official-website dev",
    "build": "pnpm --filter @moliggy-tech/official-website build",
    "start": "pnpm --filter @moliggy-tech/official-website start",
    "lint": "pnpm --filter @moliggy-tech/official-website lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "pnpm -r clean && pnpm clean:root",
    "clean:root": "rimraf node_modules",
    "clean:cache": "pnpm store prune"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1"
  }
}
